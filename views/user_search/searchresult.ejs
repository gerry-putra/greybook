<%- include("../partials/header") %>

<div class="container containerSearchResults">
    <h1>Search Result</h1>
    <h4><i class="fas fa-search searchIcon"></i> <%= users.length %> username/s found!</h4>
    
    <div class="searchResult">
        <% users.forEach((user) => { %>
            <hr>
            <a href="/greybook/userprofile/<%= user._id %>">
                <h5>Username: <strong><%= user.username %></strong></h5>
            </a> 
            <p>Name: <%= user.firstname %> <%= user.lastname %></p>
            <% if(user.bio) { %>
                <p><%= user.bio %></p>
            <% } %>
            <hr> 
        <% }); %>
    </div>

    <!-- Search bar -->
    <div class="form-group text-center my-5">
        <form action="/greybook/search/results" method="GET">
            <div class="container">
                <div class="row">
                    <div class="col-9 col-lg-10">
                        <input type="text" class="form-control" name="search" id="search" placeholder="Search again?">
                    </div>
                    <div class="col-3 col-lg-2">
                        <button type="submit" class="btn btn-outline-success px-4 px-lg-5">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>